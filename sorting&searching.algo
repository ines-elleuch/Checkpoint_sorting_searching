PROCEDURE Insertion_sort (VAR arr : ARRAY_OF INTEGER)
VAR
    i,j,nbr : INTEGER;
BEGIN
    FOR i FROM 1 TO arr.length-1 DO
        nbr := arr [i];
        j := i-1;
        WHILE (j >= 0 AND arr[j] > nbr) DO
            arr[j+1] := arr[j];
            j := j-1;
        END_WHILE
        arr[j+1] = nbr;
    END_FOR
END
